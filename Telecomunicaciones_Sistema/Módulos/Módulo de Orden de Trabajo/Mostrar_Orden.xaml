        <Label x:Name="lblEmp_Copy" Content="Empleado:" HorizontalAlignment="Left" Margin="45,41.2,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold"/>
        <Image Margin="15,7,592,246" Source="/Módulos/Módulo de Orden de Trabajo/logoTele.png" Stretch="Fill" Grid.Row="1"/>

    </Grid>
</Window>
